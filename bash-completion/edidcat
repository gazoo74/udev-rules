_edidcat()
{
	local cur prev words cword
	_init_completion -s || return

	case $prev in
	-p|--prefix)
		return
		;;
	esac

	local short_opts="-p -e -D -V -h"
	local long_opts="--prefix --export --debug --version --help"
	if [[ "$cur" == -* ]]; then
		COMPREPLY=( $( compgen -W "$short_opts $long_opts" -- "$cur" ) )
		return
	fi

	_filedir
} &&
complete -F _edidcat edidcat
